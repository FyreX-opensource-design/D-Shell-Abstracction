<?xml version="1.0"?>
<labwc_config>
  <!-- Brightness -->
  <keybind key="XF86MonBrightnessUp">
    <action name="Execute">
      <command>brightnessctl set 5%+</command>
    </action>
  </keybind>
  <keybind key="XF86MonBrightnessDown">
    <action name="Execute">
      <command>brightnessctl set 5%-</command>
    </action>
  </keybind>
  <keybind key="C-c">
    <action name="Execute">
      <command>/opt/system/lib/copy-paste.sh copy</command>
    </action>
  </keybind>
  <keybind key="C-v">
    <action name="Execute">
      <command>/opt/system/lib/copy-paste.sh paste</command>
    </action>
  <keybind key="A-F4">
    <action name="Close" />
  </keybind>
  <keybind key="ctrl">
    <action name="Execute">
      <command>/opt/system/lib/sticky-keys.sh ctrl</command>
    </action>
  </keybind>
  <keybind key="alt">
    <action name="Execute">
      <command>/opt/system/lib/sticky-keys.sh alt</command>
    </action>
  </keybind>
  <keybind key="shift">
    <action name="Execute">
      <command>/opt/system/lib/sticky-keys.sh shift</command>
    </action>
  </keybind>
  <keybind key="super">
    <action name="Execute">
      <command>/opt/system/lib/sticky-keys.sh super</command>
    </action>
  </keybind>
  <keybind key="C-A-Escape">
    <action name="Execute">
      <command>$TASK_MANAGER</command>
    </action>
  </keybind>
  <keybind key="C-A-Delete">
    <action name="Execute">
      <command>$/opt/system/apps/ctrl-alt-delete.sh</command>
    </action>
  </keybind>
  <keybind key="W-C-v">
    <action name="Execute">
      <command>$VOLUME_MIXER</command>
    </action>
  </keybind>
  <keybind key="W-f">
    <action name="Execute">
      <command>$FILE_EXPLORER</command>
    </action>
  </keybind>
  <keybind key="W-h">
    <action name="Execute">
      <command>/opt/lib/voice/STT_commands.sh</command>
    </action>
  </keybind>
  <keybind key="f1">
    <action name="Execute">
      <command>$HELP_MENU</command>
    </action>
  </keybind>
  <keybind key="W-f1">
    <action name="Execute">
      <command>$OS_HELP_MENU</command>
    </action>
  </keybind>
</labwc_config>
